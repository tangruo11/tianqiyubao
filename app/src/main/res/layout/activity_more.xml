<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">
    <RelativeLayout
        android:id="@+id/more_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/more_tv_back"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:id="@+id/more_tv_title"
            android:text="更多设置"
            android:textSize="24sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/more_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_below="@id/more_top_layout"/>
    <TextView
        android:id="@+id/exchangebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line"
        android:text="改变壁纸"
        android:padding="10dp"
        android:textSize="24sp"
        android:drawableLeft="@mipmap/more_bg"
        android:drawablePadding="20dp"/>
    <ImageView
        android:id="@+id/more_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_below="@id/exchangebg"/>
    <RadioGroup
        android:id="@+id/more_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line2"
        android:visibility="gone"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/more_rb_green"
            style="@style/rbbg"
            android:background="#C5EDD1"
            android:text="青瓦白墙"
           />
        <RadioButton
            android:id="@+id/more_rb_pink"
            style="@style/rbbg"
            android:background="#FCAFAE"
            android:text="粉装玉器"
            />
        <RadioButton
            android:id="@+id/more_rb_blue"
            style="@style/rbbg"
            android:background="#87CEEB"
            android:text="蓝色海洋"
            />

    </RadioGroup>

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_bg"
        android:text="当前版本"
        android:padding="10dp"
        android:textSize="24sp"
        android:drawableLeft="@mipmap/more_version"
        android:drawablePadding="20dp"/>
    <ImageView
        android:id="@+id/more_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_below="@id/version"/>
    <TextView
        android:id="@+id/clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/version"
        android:text="清除缓存"
        android:padding="10dp"
        android:textSize="24sp"
        android:drawableLeft="@mipmap/more_cache"
        android:drawablePadding="20dp"/>
    <ImageView
        android:id="@+id/more_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        android:layout_below="@id/clear"/>
    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_line4"
        android:text="分享软件"
        android:padding="10dp"
        android:textSize="24sp"
        android:drawableLeft="@mipmap/more_share"
        android:drawablePadding="20dp"/>

</RelativeLayout>