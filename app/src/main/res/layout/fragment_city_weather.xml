<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fgment_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CityWeatherFragment"
    android:background="@mipmap/bg">
<LinearLayout
    android:id="@+id/frag_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/frag_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25℃"
            android:textSize="60sp"
            />
        <TextView
            android:id="@+id/frag_city"
           style="@style/textstyle"
            android:text="北京"
            android:layout_below="@id/frag_wendu"/>
        <TextView
            android:id="@+id/frag_tianqi"
            style="@style/textstyle"
            android:text="晴"
            android:layout_below="@id/frag_city"/>
        <ImageView
                android:id="@+id/frag_iv_today"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/icon"
            android:layout_margin="10dp"
                android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/frag_time"
            style="@style/textstyle"
            android:text="2019-09-22"
            android:layout_below="@id/frag_tianqi"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/frag_fengkuang"
            style="@style/textstyle"
            android:text="东风3-4级"
            android:layout_below="@id/frag_time"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/xian"
           android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/frag_fengkuang"
            android:layout_alignBottom="@id/frag_fengkuang"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorRed"
            />
        <TextView
            android:id="@+id/frag_temprange"
            style="@style/textstyle"
            android:text="31~35℃"
            android:layout_alignBottom="@id/frag_fengkuang"
            android:layout_toRightOf="@id/xian"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/frag_center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGreen"/>

    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/layout_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cloth"
                style="@style/itemstyle"
                android:text="穿衣指数"
                android:drawableBottom="@mipmap/icon_cloth"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen"/>
            <TextView
                android:id="@+id/car"
                style="@style/itemstyle"
                android:text="洗车指数"
                android:drawableBottom="@mipmap/icon_car"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen"/>
            <TextView
                android:id="@+id/cold"
                style="@style/itemstyle"
                android:text="感冒指数"
                android:drawableBottom="@mipmap/icon_ganmao"/>
        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGreen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sport"
                style="@style/itemstyle"
                android:text="运动指数"
                android:drawableBottom="@mipmap/icon_sport"
                />
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen"/>
            <TextView
                android:id="@+id/rays"
                style="@style/itemstyle"
                android:text="紫外线指数"
                android:drawableBottom="@mipmap/icon_light"/>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen"/>
            <TextView
                android:id="@+id/item6"
                style="@style/itemstyle"
                android:text=""
               />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>



</ScrollView>